  input:checked + label span {
    opacity: 0;
    top: 50%; }
  input:checked + label span:first-child {
    opacity: 1;
    transform: rotate(405deg); }
  input:checked + label span:last-child {
    opacity: 1;
    transform: rotate(-405deg); }
  input ~ .social {
